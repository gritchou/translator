{
    "manifest_version": 2,
    "name": "Translator",
    "version": "1.0",
  
    "description": "Translate selection with contextmenu.",
    "homepage_url": "https://github.com/gritchou/translator",
    "icons": {
        "48": "icons/planet.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "activeTab",
        "contextMenus"
    ],

    "browser_action": {
        "default_icon": "icons/planet.png",
        "default_title": "Translator",
        "default_popup": "popup/choose-lang.html"
    }
}
